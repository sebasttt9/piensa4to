# Application
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/datapulse

# JWT Authentication
JWT_SECRET=tu-clave-super-segura-cambiar-en-produccion
JWT_EXPIRATION=24h

# File Uploads
FILE_MAX_SIZE=5242880
FILE_PREVIEW_LIMIT=50
STORAGE_TYPE=memory

# AWS S3 (Disabled for local development)
AWS_S3_ENABLED=false
AWS_REGION=us-east-1
AWS_S3_BUCKET=datapulse-files

# Email (Disabled for local development)
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp

# Redis (Disabled for local development)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=false

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
CORS_ORIGIN=*

# Monitoring
SENTRY_ENABLED=false
