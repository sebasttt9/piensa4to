# Application
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/datapulse
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/datapulse

# JWT Authentication
JWT_SECRET=tu-clave-super-segura-cambiar-en-produccion
JWT_EXPIRATION=24h

# File Uploads
FILE_MAX_SIZE=5242880
FILE_PREVIEW_LIMIT=50
STORAGE_TYPE=memory

# AWS S3 (Optional - for file storage)
AWS_S3_ENABLED=false
AWS_REGION=us-east-1
AWS_S3_BUCKET=datapulse-files
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email (Optional)
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@datapulse.com

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=
SENDGRID_FROM=noreply@datapulse.com

# Redis (Optional - for caching and sessions)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=false
LOG_DIR=./logs

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring (Optional)
SENTRY_ENABLED=false
SENTRY_DSN=
