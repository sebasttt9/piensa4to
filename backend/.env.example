# Application
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=

# JWT Authentication
JWT_SECRET=
JWT_EXPIRATION=24h

# Default admin (optional for bootstrap)
DEFAULT_ADMIN_EMAIL=
DEFAULT_ADMIN_PASSWORD=
DEFAULT_ADMIN_NAME=DataPulse Admin
DEFAULT_ADMIN_ROLE=admin

# File Uploads
FILE_MAX_SIZE=5242880
FILE_PREVIEW_LIMIT=50
STORAGE_TYPE=memory

# AWS S3 (optional)
AWS_S3_ENABLED=false
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email (optional)
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@datapulse.com
SENDGRID_API_KEY=
SENDGRID_FROM=noreply@datapulse.com

# Redis (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=false
LOG_DIR=./logs

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
CORS_ORIGIN=*

# Monitoring
SENTRY_ENABLED=false
SENTRY_DSN=
